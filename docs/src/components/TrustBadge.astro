---
interface Props {
	status: 'trusted' | 'quarantine' | 'unknown';
}

const { status } = Astro.props;

const colors: Record<string, { bg: string; text: string; label: string }> = {
	trusted: { bg: '#166534', text: '#bbf7d0', label: 'Trusted' },
	quarantine: { bg: '#991b1b', text: '#fecaca', label: 'Quarantine' },
	unknown: { bg: '#525252', text: '#d4d4d4', label: 'Unknown' },
};

const style = colors[status] ?? colors.unknown;
---

<span
	class="trust-badge"
	style={`background-color: ${style.bg}; color: ${style.text};`}
>
	{style.label}
</span>

<style>
	.trust-badge {
		display: inline-block;
		padding: 0.2em 0.6em;
		border-radius: 4px;
		font-size: 0.85em;
		font-weight: 600;
		letter-spacing: 0.025em;
	}
</style>
